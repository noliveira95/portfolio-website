{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "client": {
            "type": "string"
          },
          "date_completed": {
            "type": "string",
            "format": "date"
          },
          "skills_applied": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "featured_image": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "description",
          "client",
          "date_completed",
          "skills_applied",
          "featured_image"
        ]
      }
    }
  },
  "required": ["projects"]
}
